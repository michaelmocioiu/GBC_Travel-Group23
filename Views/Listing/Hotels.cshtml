@model IEnumerable<GBC_Travel_Group23.Models.Hotel>

    @{
    ViewData["Title"] = "Hotel Listings";
    }

    <h2>@ViewData["Title"]</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Hotel Name</th>
                <th>Location</th>
                <th>Rooms Available</th>
                <th>Address</th>
                <th>Amenities</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.City, @hotel.Country</td>
                <td>@(hotel.Rooms != null ? hotel.Rooms.Count : 0)</td>
                <td>@hotel.Address</td>
                <td>@string.Join(", ", hotel.Amenities)</td>
            </tr>
        }
        </tbody>
    </table>
